<% if logged_in? %>
  <%= render 'posts/posts', posts: @posts %>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the My Gear</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
  <%= render 'posts/posts', posts: @posts %>
<% end %>