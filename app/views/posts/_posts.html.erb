<div class="row no-gutters">
    <div class="card-columns">
      <% posts.each do |post| %>
        <div class="card mb-4"> 
          <%= link_to image_tag(post.img.to_s, :class => "card-img-top", :style => ""), post_path(post) %>
            <div class="card-footer">
              <p class="card-text"><%= post.comment %></p>
              <%= link_to image_tag(post.user.img.to_s, :class => "image-round-sm mr-1", :style => ""), user_path(post.user) %> 
              <%= link_to post.user.name, user_path(post.user)%>
              <p class="card-text"><small class="text-muted"><%= post.created_at.strftime('%Y/%m/%d') %></small></p>
            </div>
        </div>
      <% end %>
    </div>
</div>
